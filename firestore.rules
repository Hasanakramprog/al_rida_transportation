rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read access to schedule_suffixes for all authenticated users
    match /schedule_suffixes/{document} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through admin/setup scripts
    }
    
    // Allow read access to cities for all authenticated users
    match /cities/{document} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through admin/setup scripts
    }
    
    // Allow users to read/write their own profile
    match /student_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temporary rule for database population (REMOVE AFTER SETUP)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
